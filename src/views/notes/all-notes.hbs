<div>
    {{#each notes}}
    <div>
        <h4>{{title}}</h4>
        
        <form action="/notes/delete/{{_id}}?_method=DELETE" method="POST">
        <input type="hidden" name="_method" value="DELETE">
        <button type="submit">ELIMINAR</button>
        </form>
    </div>
    {{else}}
    <div>
        <h2>Hola {{user.name}}!</h2>
        <p>No hay Tareas</p>
        <a href="/notes/add">Crear una</a>
    </div>
    {{/each}}
</div>